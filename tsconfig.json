{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}